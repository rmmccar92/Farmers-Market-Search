<div class="card p-2 text-center login-card w-75 mx-auto">
  <div class="col-md-8 mx-auto">
    <h2>Login</h2>

    <form id="login-form">
      <div class="form-group row m-1">
        <label
          for="staticEmail"
          class="col-sm-2 col-form-label"
        >Username</label>
        <div class="col-sm-10">
          <input
            type="username"
            class="form-control"
            id="username-input-login"
            value=""
          />
        </div>
      </div>
      <div class="form-group row m-1">
        <label
          for="inputPassword"
          class="col-sm-2 col-form-label"
        >Password</label>
        <div class="col-sm-10">
          <input
            type="password"
            class="form-control"
            id="password-input-login"
            placeholder=""
          />
        </div>
      </div>
       <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <h2>Signup</h2>

    <form id="signup-form">
      <div class="form-group row m-1">
        <label
          for="staticEmail"
          class="col-sm-2 col-form-label"
        >Username</label>
        <div class="col-sm-10">
          <input
            type="username"
            class="form-control"
            id="username-input-signup"
            value=""
          />
        </div>
      </div>
            <div class="form-group row m-1">
        <label
          for="staticEmail"
          class="col-sm-2 col-form-label"
        >Email</label>
        <div class="col-sm-10">
          <input
            type="email"
            class="form-control"
            id="email-input-signup"
            value=""
          />
        </div>
      </div>
      <div class="form-group row m-1">
        <label
          for="inputPassword"
          class="col-sm-2 col-form-label"
        >Password</label>
        <div class="col-sm-10">
          <input
            type="password"
            class="form-control"
            id="password-input-signup"
            placeholder=""
          />
        </div>
      </div>
       <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="../../JS/login.js"></script>
<script src="../../JS/signup.js"></script>