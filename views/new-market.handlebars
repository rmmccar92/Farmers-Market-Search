<div class="card align mx-4 mt-4 bg-dark bg-gradient text-white customCard">
  <div class="card-header">
    <h3 class="card-title card-header">Add Market</h3>
    <hr />

    <form id="new-market-form" class="card-body card">
      <label class="form-label" for="market-name">Market Name</label>
      <br />
      <div class="input-group mb-3">
        <input
          id="market-name"
          name="market-name"
          type="text"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <label class="form-label" for="market-hours">Hours</label>
      <br />
      <div class="input-group mb-3">
        <input
          id="market-hours"
          name="market-hours"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <label class="form-label" for="market-address">Address</label>
      <br />
      <div class="input-group mb-3">
        <input
          id="market-address"
          name="market-address"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <label class="form-label" for="market-zip">Zip Code</label>
      <br />
      <div class="input-group mb-3">
        <input
          id="market-zip"
          name="market-zip"
          class="form-control"
          aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default"
        />
      </div>
      <label class="form-label" for="market-zip">Market Description</label>
      <br />
      <div class="input-group mb-3">
        <input id="market-description" name="market-description" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" />
      </div>
      <div class="d-grid gap-2">
        <button type="submit" class="btn fs-5">Submit</button>
      </div>
    </form>
  </div>
</div>
<script src="JS/add-market.js"></script>
<script src="JS/edit-market.js"></script>